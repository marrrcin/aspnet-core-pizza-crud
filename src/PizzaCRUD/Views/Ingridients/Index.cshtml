@using PizzaCRUD.Controllers
@model IEnumerable<PizzaCRUD.Models.Ingridient>

@{
    ViewData["Title"] = "Składniki";
}

<h2>Składniki</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ dodaj składnik</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (!MandatoryIngridients.Ingridients.Contains(item.Name))
            {
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edycja</a> 
                @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Szczegóły</a>*@ 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
            }
            else
            {
                <span>Składnik obowiązkowy</span>
            }
            
        </td>
    </tr>
}
</table>
